    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug cli",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "cwd": "${workspaceRoot}",
            "args": [
            ]
        },
        {
            "name": "Debug vcluster (localhost:2346)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "localhost",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/app",
                },
            ],
            "showLog": true,
            //"trace": "verbose", // use for debugging problems with delve (breakpoints not working, etc.)
        }
    ]
 }